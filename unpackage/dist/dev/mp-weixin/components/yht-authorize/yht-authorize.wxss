button {
  background-color: transparent;
  padding: 0rpx;
  line-height: inherit;
  margin: 0;
  border-radius: 0rpx;
  cursor: default;
  font-size: 34rpx;
  border: none;
}
button::after {
  border: none;
}
.yht-authorize {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
.yht-authorize .content {
  position: absolute;
  width: 100%;
  height: 408rpx;
  left: 0;
  bottom: 0;
  background-color: #fff;
  transition: all 0.5s 0s;
  box-shadow: 0px 6px 16px 0px rgba(70, 76, 86, 0.14);
  color: #464C56;
  border-radius: 40rpx 40rpx 0px 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 80rpx;
  box-sizing: border-box;
}
.yht-authorize .content .content-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #1F1F1F;
  line-height: 50rpx;
  margin-top: 54rpx;
}
.yht-authorize .content .content-detail {
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  margin-top: 16rpx;
}
.yht-authorize .content .content-detail .theme-color {
  color: #f391a9;
}
.yht-authorize .content .btn-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 52rpx;
}
.yht-authorize .content .btn-box .btn {
  width: 284rpx;
  height: 86rpx;
  border-radius: 48rpx;
  border: 1px solid #999999;
  font-size: 34rpx;
  font-weight: 500;
  color: #1F1F1F;
  line-height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.yht-authorize .content .btn-box .agree {
  background: #f391a9;
  color: #FFFFFF;
  border: none;
}

