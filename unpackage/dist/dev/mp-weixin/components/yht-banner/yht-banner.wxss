/* banner图 */
.swiper-banner {
  height: 280rpx;
  margin-top: 24rpx;
}
.swiper-banner navigator {
  width: 100%;
  height: 100%;
}
.swiper-banner .navbox {
  width: 100%;
  height: 100%;
}
.swiper-banner .banner-item {
  height: 280rpx;
  border-radius: 12rpx;
}
.swiper-banner .banner-item .booklog {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
/* banner指示器 */
.add-dots {
  text-align: center;
}
.add-dots .dots-Active {
  display: inline-block;
  width: 22rpx;
  height: 6rpx;
  background: linear-gradient(270deg, rgba(150, 159, 169, 0.5) 0%, #F5F7FA 100%);
  border-radius: 6rpx;
  margin-left: 18rpx;
  transition: all .5s;
}
.add-dots .dotSlots {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background: #969FA9;
  border-radius: 6rpx;
  opacity: 0.5;
  margin-left: 18rpx;
  transition: all .5s;
}

